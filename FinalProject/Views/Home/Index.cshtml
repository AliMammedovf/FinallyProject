@model HomeVM
@{
	int counter = 1;
}
<!-- Banner Section -->
<section class="banner-section">
	<div class="main-slider-carousel owl-carousel owl-theme">
      
		@foreach(var item in Model.Sliders)
		{
			@(counter++)

			<!-- Slide -->
			if (counter % 2 == 0)
			{
				<div class="slide" style="background-image: url(images/main-slider/image-1.jpg)">
					<div class="auto-container">
						<div class="row clearfix">
							<!-- Content Column -->
							<div class="content-column col-lg-7 col-md-12 col-sm-12">
								<div class="inner-column">
									<h1>@item.Title</h1>
									<div class="text">@item.Description</div>
									<div class="btn-box">
										<a class="theme-btn btn-style-two" asp-action="Index" asp-controller="Shope"><span class="txt">Order Now</span></a>
									</div>
								</div>
							</div>
							<!-- Image Column -->
							<div class="image-column col-lg-5 col-md-12 col-sm-12">
								<div class="inner-column">
									@* <div class="text-image">
										<img src="~/images/main-slider/" alt="" />
									</div> *@
									<div class="image">
										<img src="~/uploads/sliders/@item.ImageUrl" width="150px" height="200px" alt="" />
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			}
			else
			{
				<div class="slide" style="background-image: url(/images/main-slider/image-1.jpg)">
					<div class="auto-container">
						<div class="row clearfix">
							<!-- Content Column -->
							<div class="content-column col-lg-7 col-md-12 col-sm-12">
								<div class="inner-column">
									<h1>@item.Title</h1>
									<div class="text">@item.Description</div>
									<div class="btn-box">
										<a class="theme-btn btn-style-two" asp-action="Index" asp-controller="Shope"><span class="txt">Order Now</span></a>
									</div>
								</div>
							</div>
							<!-- Image Column -->
							<div class="image-column col-lg-5 col-md-12 col-sm-12">
								<div class="inner-column">
									<div class="text-image">
										<img src="~/images/main-slider/content-image-2.png" alt="" />
									</div>
									<div class="image">
										<img src="~/uploads/sliders/@item.ImageUrl" alt="" />
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			}
		}

	

		<!-- Slide -->
		

	</div>
</section>
<!-- End Banner Section -->
<!-- Deal Section -->
<section class="deal-section">
	<div class="image-layer" style="background-image: url(images/background/1.jpg)"></div>
	<!-- Upper Box -->
	<div class="upper-box">
		<div class="auto-container">
			<div class="content">
				<div class="menu-icon"><img src="~/uploads/aboutsliders/@Model.AboutSlider.ImageUrl" width="250px" height="250px" alt="" /></div>
