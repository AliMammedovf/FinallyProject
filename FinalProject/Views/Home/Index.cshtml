				<div class="bold-text">@Model.AboutSlider.Text</div>
				<div class="text">@Model.AboutSlider.Text</div>
				<div class="btn-box">
					<a class="theme-btn btn-style-one" asp-action="Index" asp-controller="About"><span class="txt">@Model.AboutSlider.RedirectUrl</span></a>
				</div>
			</div>
		</div>
	</div>
	<!-- End Upper Box -->
	<!-- Lower Box -->
	<div class="lower-box">
		<div class="auto-container">
			<div class="row clearfix">

				@foreach (var item in Model.PizzasMenyu)
				{
					<!-- Service Block -->
					<div class="service-block col-lg-4 col-md-6 col-sm-12">
						<div class="inner-box" style="background-image: url(~/uploads/pizzas/background/@item.ImageUrl)">
							<h3><a href="#">@item.Title</a></h3>
							<div class="price">@item.Description</div>
							<div class="image-outer">
								<div class="menu-price">$ @item.Price</div>
								<div class="image">
									<a href="#"><img src="~/uploads/pizzas/@item.ImageUrl" alt="" /></a>
								</div>
							</div>
						</div>
					</div>
				}


			</div>
		</div>
	</div>
	<!-- End Lower Box -->
</section>
