@model UserLoginVm

	<section class="page-title-section" style="background-image: url(images/background/6.jpg)">
			<div class="auto-container">
				<h1>Chef Pizza</h1>
				<div class="content">
					<h3>SignIn</h3>
					<ul class="bread-crumbs">
						<li><a asp-action="Index" asp-controller="Home">Home</a></li>
						<li>Login</li>
					</ul>
				</div>
			</div>
	</section>

<!-- Pills navs -->
<div class="container">
    <div class="row">
        <div class="col-10">
            <ul class="nav nav-pills nav-justified mb-3" id="ex1" role="tablist">
                <li class="nav-item" role="presentation">
                    <a class="nav-link active" id="tab-login" data-mdb-pill-init asp-action="Login" asp-controller="User" role="tab"
                       aria-controls="pills-login" aria-selected="true">Login</a>
                </li>
                <li class="nav-item" role="presentation">
                    <a class="nav-link" id="tab-register" data-mdb-pill-init asp-action="Register" asp-controller="Account" role="tab"
                       aria-controls="pills-register" aria-selected="false">Register</a>
                </li>
            </ul>
        </div>
    </div>
</div>
<!-- Pills navs -->
<!-- Pills content -->
<div class="container">
    <div class="row">
        <div class="col-10">
            <div class="tab-content">
                <div class="tab-pane fade show active" id="pills-login" role="tabpanel" aria-labelledby="tab-login">
                    <form asp-action="Login" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <!-- Email input -->
                        <div data-mdb-input-init class="form-outline mb-4">

                            <label class="text-primary" for="loginName"> Username</label>
                            <input asp-for="UserName" id="loginName" class="form-control" />
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>


                        <!-- Password input -->
                        <div data-mdb-input-init class="form-outline mb-4">

                            <label class="text-primary" for="loginPassword">Password</label>
                            <input asp-for="Password" id="loginPassword" class="form-control" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <!-- 2 column grid layout -->
                        <div class="row mb-4">
                            <div class="col-md-6 d-flex justify-content-center">
                                <!-- Checkbox -->
                                <div class="form-check mb-3 mb-md-0">
                                    <input class="form-check-input" asp-for="IsPersistent" id="loginCheck" checked />
                                    <label class="text-primary" for="loginCheck"> Remember me </label>
                                </div>
                            </div>

                            <div class="col-md-6 d-flex justify-content-center">
                                <!-- Simple link -->
                                <a href="#!">Forgot password?</a>
                            </div>
                        </div>

                        <!-- Submit button -->
                        <button type="submit" data-mdb-button-init data-mdb-ripple-init class="btn btn-primary btn-block mb-4">Sign in</button>

                        <!-- Register buttons -->
                        <div class="text-center">
                            <p>Not a member? <a asp-action="Register" asp-controller="Account">Register</a></p>
                        </div>
                    </form>
                </div>

            </div>
        </div>
    </div>
</div>
<!-- Pills content -->