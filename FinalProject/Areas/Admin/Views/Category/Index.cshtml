@model IEnumerable<CategoryGetDTO>
@{
    int counter = 1;
}
<div class="container">
    <div class="row">
        <div class="col-12">
            <a asp-action="Create" asp-controller="Category" class="btn btn-outline-info">Create</a>
        </div>
    </div>
    <div class="row">
       <div class="col-12">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">No</th>
                        <th scope="col">Name</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var item in Model)
                    {
                        <tr>
                            <th scope="row">@(counter++)</th>
                            <td>@item.Id</td>
                            <td>@item.Name</td>
                            <td>
                                <a asp-action="Delete" asp-controller="Category" asp-route-id="@item.Id" class="btn btn-outline-danger delete-btn">Delete</a>
                                <a asp-action="Update" asp-controller="Category" asp-route-id="@item.Id" class="btn btn-outline-primary">Update</a>
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
       </div>
    </div>
</div>
